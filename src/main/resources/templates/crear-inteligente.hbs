{{#partial "contenido"}}

<div class="container tools-padding">
	<div class="card-deck mb-2 text-left">
		<div class="mb-4">
			<div>
				<h3 class="my-0 font-weight-normal">Agregar dispositivo inteligente al catálogo</h3>
			</div>
			<div class="card-body">
				<form action="/dispositivos/new/inteligente" method="POST">
					<div>
						<label for="nombre">Nombre</label>
						<input type="text" name="nombre" required/>
					</div>
					<div>
						<label for="consumo">Consumo en kWh</label>
						<input type="text" name="consumo" required/>
					</div>
					<div>
						<label for="fabricante">Tipo de dispositivo</label>
						<select name="fabricante" required>
							<option value="Elija un fabricante" disabled="">Elija un fabricante</option>
							<option>Aire acondicionado</option>
							<option>Computadora</option>
							<option>Heladera</option>
							<option>Lámpara</option>
							<option>Lavarropas</option>
							<option>Microondas</option>
							<option>Plancha</option>
							<option>Televisor</option>
							<option>Ventilador</option>
						</select>
					</div>
					<div class="d-block my-3">
						<p>Bajo consumo?</p>
						<div class="custom-control custom-radio">
							<input id="credit" name="bajoConsumo" type="radio" class="custom-control-input" value="Sí" required="">
							<label class="custom-control-label" for="credit">Sí</label>
						</div>
						<div class="custom-control custom-radio">
							<input id="debit" name="bajoConsumo" type="radio" class="custom-control-input" checked="" value="No" required="">
							<label class="custom-control-label" for="debit">No</label>
						</div>
					</div>
					<div>
						<p class="error"> {{errorMessage}} </p>
					</div>
					<div>
						<button type="submit" class="btn btn-lg btn-block btn-primary">Confirmar</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

{{/partial}}

{{>layout.hbs}}

