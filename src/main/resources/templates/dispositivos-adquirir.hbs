<div class="container tools-padding">
  <div class="card-deck mb-2 text-center">
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">{{nombre}}</h4>
      </div>
      <div class="card-body">
        <input type=>{{nombre}}</p>
        <form action="/dispositivos/acquire" method="POST">
        	<p>
            Nombre: {{nombre}} <br>
            Inteligente: {{inteligente}} <br>
            Bajo consumo: {{bajoConsumo}} <br>
            Consumo en kWh: {{consumokWh}} <br>
         </p>
         <button type="submit" class="btn btn-lg btn-block btn-primary">Confirmar</button>
       </form>
     </div>
   </div>
 </div>
</div>