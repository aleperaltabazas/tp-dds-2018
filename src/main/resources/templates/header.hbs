<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <div class="my-0 mr-md-auto font-weight-normal">
    <form action="/" method="GET">
      <input type="image" src="/resources/imgs/logo.png" class="sge-logo" alt="SGE">
    </form>  
  </div>
  <nav class="my-2 my-md-0 mr-md-3">
    <div class="row">
      <div class="p-2 text-dark">
        <form action="/solicitudes" method="GET">
          <input type="image" src="/resources/imgs/{{mail-icon}}" alt="Solicitudes" class="p-2 hogar-button">
        </form>
      </div>
      <div class="p-2 text-dark">
        <form action="/hogar" method="GET">
          <input type="image" src="/resources/imgs/casa.png" alt="Mi Hogar" class="p-2 hogar-button">
        </form>
      </div>
      <div class="p-2 text-dark">
        <form action="/me" method="GET">
          <input type="image" src="/resources/imgs/user.png" alt="Perfil de {{username}}" class="p-2 user-button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        </form>
      </div>
    </div>
  </nav>
</div>