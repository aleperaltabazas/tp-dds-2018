{{#partial "contenido"}}

<div class="container tools-padding">
	<div class="card-deck mb-2 text-left">
		<div class="card">
			<div class="card-header">
				<h4 class="my-0 font-weight-normal">Dispositivos</h4>
			</div>
			<div class="card-body">
				<ul>
					{{#dispositivosEstandar}}
					<li>
						<h5>{{this.nombre}}</h5>
						<p class="small-letter">
							Estándar	
							Uso mensual mínimo: {{this.usoMensualMinimo}} <br>
							Uso mensual máximo: {{this.usoMensualMaximo}} <br>

						</p>
					</li>
					{{/dispositivosEstandar}}

					{{#dispositivosInteligente}}
					<li>
						<h5>{{this.nombre}}</h5>
						<p class="small-letter">
							Inteligente	
							Uso mensual mínimo: {{this.usoMensualMinimo}} <br>
							Uso mensual máximo: {{this.usoMensualMaximo}} <br>
							Estado: {{this.estado}}
						</p>
					</li>
					{{/dispositivosInteligente}}
				</ul>
			</div>
		</div>
		<div class="card">
			<div>
				<div class="card-header">
					<h4 class="my-0 font-weight-normal">Consumo</h4>
				</div>
				<div class="card-body">
					<p>Total del último mes: {{consumoUltimoMes}} </p>
					<p>Total del mes actual: {{consumoMesActual}} </p>
				</div>
			</div>
			<div>
				<div class="card-header">
					<h4 class="my-0 font-weight-normal">Ultimas mediciones</h4>
				</div>
				<div class="card-body">
					<p>
						Consumo promedio: {{consumoPromedio}} <br> 
						Consumo diario estimado: {{estimadoDiario}} <br>
						Consumo óptimo: {{usoOptimo}}
					</p>
				</div>
			</div>
		</div>
	</div>
</div>	

{{/partial}}

{{>layout.hbs}}