{{#partial "contenido"}}
  
<div class="container tools-padding">
	<div class="card-deck mb-2 text-left">
		<div class="card">
			<div class="card-header">
				<h4 class="my-0 font-weight-normal">Dispositivos</h4>
			</div>
			<div class="card-body">
				<ul>
					{{#each dispositivosEstandar}}
					<li>
						<h5>{{this.nombre}}</h5>
						<p class="small-letter">	
							Uso mensual mínimo: {{this.usoMensualMinimo}} <br>
							Uso mensual máximo: {{this.usoMensualMaximo}}
						</p>
					</li>
					{{/each}}

					{{#each dispositivosInteligente}}
					<li>
						<p>	
							{{this.nombre}} <br>
							{{this.usoMensualMinimo}} <br>
							{{this.usoMensualMaximo}}
						</p>
					</li>
					{{/each}}
				</ul>
			</div>
		</div>
		<div class="card">
			<div>
				<div class="card-header">
					<h4 class="my-0 font-weight-normal">Consumo</h4>
				</div>
				<div class="card-body">
					<p>TODO</p>
				</div>
			</div>
			<div>
				<div class="card-header">
					<h4 class="my-0 font-weight-normal">Ultimas mediciones</h4>
				</div>
				<div class="card-body">
					<p>TODO</p>
				</div>
			</div>
		</div>
	</div>
</div>	

{{/partial}}

